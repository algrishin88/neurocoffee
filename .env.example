# Example environment variables for local development
# Copy this file to `.env` and fill values before starting the server

# Server
PORT=3307
NODE_ENV=development

# Database (example placeholders)
DATABASE_URL=postgres://user:password@localhost:5432/neurocup

# Yandex GPT (if used)
YANDEX_API_KEY=
YANDEX_FOLDER_ID=

# Telegram bot settings (required to enable Telegram notifications)
# Create a bot with @BotFather and get the token (format: 123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11)
TELEGRAM_BOT_TOKEN=
# Chat ID where recipes and messages will be sent (numeric ID or @channelName)
TELEGRAM_CHAT_ID=
# Optional: separate chat for support/operator messages
TELEGRAM_SUPPORT_CHAT_ID=

# Other optional settings
SMTP_HOST=
SMTP_USER=
SMTP_PASS=
